{
  "name": "default-api-project",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "workspaces": [
    "packages/*",
    "apps/*",
    "infrastructure"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "turbo run test",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "cdk": "pnpm --filter infrastructure cdk"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.4.2",
    "turbo": "^2.5.2",
    "typescript-eslint": "^8.20.0"
  },
  "dependencies": {
    "@nestjs/cli": "^11.0.7"
  }
}
